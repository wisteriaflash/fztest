<%- include header %>
<p class="info">
  作者：<a href="/u/<%= post.name %>"><%= post.name %></a> | 
  日期：<%= post.time.minute %>
  标签：
    <% if(post.tags){ %>
      <% post.tags.forEach(function(tag, index){ %>
        <% if(tag.tag){ %>
          <a class="tag" href="/tags/<%= tag.tag %>"><%= tag.tag %></a>
        <% } %>
      <% }) %>
    <% } %>
</p>
<p><%- post.post %></p>
<%- include comment %>
<%- include footer %>